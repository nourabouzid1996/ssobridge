            </li>
          </ul>
          <div class="tab-content py-4" style="position: relative; height: 300px;">
            <!-- Adjust height here -->
            <!-- Curl tab content -->
            <div class="tab-pane active absolute inset-0">
              <pre
                class="text-sm text-white font-mono">
{`

# Replace {auth_id} with the actual auth ID and {your_api_token} 
with your actual API token

# Get redirect URL
curl -X GET "https://api.ssobridge.com/v1/saml/redirect/{auth_id}" \
     
     -H "Content-Type: application/json" \

     -H "Authorization: Bearer {your_api_token}"

# Read access code
curl -X GET "https://api.ssobridge.com/v1/saml/code" \

     -H "Content-Type: application/json" \

     -H "Authorization: Bearer {your_api_token}"
`}
        </pre>
            </div>
            <!-- Scala tab content -->
            <div class="tab-pane hidden absolute inset-0" style="height: 100%; overflow-y: auto;">
              <!-- Adjust Scala tab height -->
              <pre
                class="text-sm text-white font-mono">
{`import ssoready.SSOReadyClient

object SSOClientExample extends App {
  val ssoReady = new SSOReadyClient(apiKey = "YOUR_API_KEY")

  // Get the SAML redirect URL
  val redirectUrlFuture: Future[String] = ssoReady.saml.getSamlRedirectUrl(
    organizationExternalId = "my_custom_external_id"
  )

  // Exchange SAML access code for login details
  val loginDetailsFuture: Future[LoginDetails] = ssoReady.saml.redeemSamlAccessCode(
    samlAccessCode = "saml_access_code_..."
  )
}
`}
        </pre>
            </div>
          </div>
        </div>
      </div>
    </Fragment>
  </Content>

  {/* Tab Switching Script */}
  <script>
    const tabs = document.querySelectorAll('.tab-btn');
    const tabPanes = document.querySelectorAll('.tab-pane');

    tabs.forEach((tab, index) => {
      tab.addEventListener('click', () => {
        tabs.forEach((t) => t.classList.remove('active-tab'));
        tab.classList.add('active-tab');

        tabPanes.forEach((pane) => {
          pane.classList.add('hidden');
          pane.classList.remove('active');
        });

        tabPanes[index].classList.remove('hidden');
        tabPanes[index].classList.add('active');
      });
    });
  </script>

